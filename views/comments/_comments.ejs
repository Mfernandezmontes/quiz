
<!-- /.panel -->
<div class="chat-panel panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-comments fa-fw"></i>
        Comentarios
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <ul class="chat">
            <% for(index in quiz.Comments){ %>
                <li class="left clearfix">
                                    <span class="chat-img pull-left"> <!--right -->
                                        <img src="http://placehold.it/50/55C1E7/fff" alt="User Avatar" class="img-circle" />
                                    </span>
                    <div class="chat-body clearfix">
                        <div class="header">
                            <strong class="primary-font">Jack Sparrow</strong>
                            <small class="pull-right text-muted">
                                <i class="fa fa-clock-o fa-fw"></i> 12 mins ago
                            </small>
                        </div>
                        <p>
                            <%= quiz.Comments[index].texto %>
                        </p>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        <div class="input-group">
            <form method="post" action="/quizes/<%= quiz.id %>/comments">
                <input id="btn-input" type="text" class="form-control input-sm" placeholder="Escriba su mensaje aqui" name="comment[texto]"/>
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-success btn-sm" id="btn-chat">Comentar</button>
                </span>
            </form>
        </div>
    </div>
    <!-- /.panel-footer -->
</div>